# .env.example for Phronesis Backend
# Copy this file to .env and fill in values for local development

# FastAPI settings
APP_ENV=development
APP_DEBUG=True
APP_HOST=127.0.0.1
APP_PORT=8000

# Database settings
# Azure SQL connection string (see Key Vault or Azure Portal)
DATABASE_URL=

# OpenAI API (for AI-powered endpoints like decision-support/chat and future-self/simulate)
# Add your OpenAI API key here (never commit your real .env)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER=

# Security
SECRET_KEY=change-this-in-production
ALLOWED_HOSTS=*